<Window x:Class="Lab3.WpfApplication.UpdateDepartmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab3.WpfApplication"
        mc:Ignorable="d"
        Title="UpdateDepartmentWindow" Height="350" Width="650">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" VerticalAlignment="Center" Height="26" Margin="0 0 0 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="75" />
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="60" />
                <ColumnDefinition Width="50" />
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0">Nosaukums:</Label>
            <TextBox Grid.Column="1" MaxLength="50"
                     Text="{Binding Department.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Padding="2 4" />
            <Label Grid.Column="3">Kods:</Label>
            <TextBox Grid.Column="4" MaxLength="2"
                     Text="{Binding Department.Code, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Padding="2 4" />
            <Label Grid.Column="6">Stāvs:</Label>
            <TextBox Grid.Column="7" MaxLength="1"
                     Text="{Binding Department.FloorNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Padding="2 4" />
        </Grid>

        <Grid Grid.Row="1" VerticalAlignment="Center" Height="26" Margin="0 0 0 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="75" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0">Tālruņa Nr.:</Label>
            <TextBox Grid.Column="1" MaxLength="50"
                     Text="{Binding Department.PhoneNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Padding="2 4" />
            <Label Grid.Column="3">E-pasts:</Label>
            <TextBox Grid.Column="4" MaxLength="50"
                     Text="{Binding Department.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Padding="2 4" />
        </Grid>

        <Grid Grid.Row="2" VerticalAlignment="Center" Height="26" Margin="0 0 0 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="75" />
                <ColumnDefinition Width="30" />
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0">Pēdējais audits:</Label>
            <DatePicker Grid.Column="1"
                        SelectedDate="{Binding Department.LastAuditDateTime, Mode=TwoWay}" />
            <Label Grid.Column="3">Ir vakances:</Label>
            <CheckBox Grid.Column="4" VerticalAlignment="Center"
                      IsChecked="{Binding Department.IsHiring, Mode=TwoWay}" />
        </Grid>

        <StackPanel Grid.Row="3" Margin="0 0 0 10">
            <Label>Apraksts:</Label>
            <TextBox MaxLength="200"
                     Text="{Binding Department.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     Height="120"
                     VerticalScrollBarVisibility="Auto"
                     Padding="2 4" />
        </StackPanel>

        <StackPanel Grid.Row="4" HorizontalAlignment="Right">
            <Button x:Name="BtnSave"
                    Command="{Binding SaveCommand}"
                    Padding="10 4">Saglabāt</Button>
        </StackPanel>

    </Grid>
</Window>
